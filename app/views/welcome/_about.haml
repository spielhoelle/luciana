= render "shared/scroll_down"

- if @avatar.present?
  %section.container#about
    .row
      .col-md-3.offset-md-1.col-sm-6.offset-sm-3
        .px-3
          .mb-5.mb-md-0
            = image_set_tag @avatar.image(:thumbnail), {  @avatar.image(:thumbnail) => '640w',  @avatar.image(:original) => '1024w' }, sizes: '100vw', class: 'w-100 h-100 fixed-ratio__inner object-fit_cover rounded-circle'
      .col-md-7.col-sm-10.offset-sm-1.text-center.text-md-left

        %h2.mb-3 Hey there...
        %div= @avatar.caption.gsub("\r", "<br/>").html_safe

    = link_to  "#skills", class: "btn btn-outline-secondary mt-5 page-scroll align-self-center", target: "_blank" do
      = "See what I do..."


.card
  -#= render "photos/single_meta", photo: photo
  = link_to photo_path(photo) do
    = image_set_tag photo.image(:thumbnail), {  photo.image(:thumbnail) => '640w',  photo.image(:original) => '1024w' }, sizes: '100vw', class: 'w-100 h-100 object-fit_cover'
  .card-header.p-0.overflow-hidden
  -if user_signed_in?
    .bottom.right.z-index-1.position--absolute.text-right.p-1
      = link_to edit_admin_photo_path(photo), class: "btn btn-outline-info", title: "Edit" do
        = fa_icon "edit"
